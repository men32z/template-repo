<div class="container">
  <div class="row">
    <div class="col-12 pt-5 d-flex">
      <div>
        <h4>All Users</h4>
      </div>
      <div class="ml-auto">
        <%= form_with url: users_path, method: 'GET', html: {id: "filters-form"} do |f| %>
          <%= f.select :status, @status,
            {
              selected: users_path(@params),
            },
            { class: 'form-control cursor-pointer', :onchange=>"self.location=this.options[this.selectedIndex].value"}
          %>
        <% end %>
      </div>
    </div>
    <div class="col-12 mt-5">
      <table class="table table-striped">
        <thead>
          <th>First Name</th>
          <th>Last Name</th>
        </thead>
        <tbody>
          <%= render @users %>
        </tbody>
      </table>
    </div>
    <div class="col-12 pb-5">
      <%= paginate @users, params: @params %>
    </div>
  </div>
</div>